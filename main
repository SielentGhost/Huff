#include<iostream>
#include<fstream>
#include<string>
#include<map>
using namespace std;
int main() {
	ifstream fin;
	string Filename = "Source.txt";
	int A[256];
	int amount;
	for (int i = 0; i < 256; i++) A[i] = 0;
	char d;
	fin.open(Filename);
	if (!fin.is_open()) {
		cout << "Error!" << endl;
	}
	else {
		cout << "File is opened!" << endl;
		while (fin.get(d)) {
			A[int(d)]++;
			amount++;
		}
	}
	fin.close();
	for (int i = 0; i < 256; i++) {
		cout << i << " - " << float(A[i])/float(amount) << endl;
	}
	//cout << amount << endl;
	map<char, int> M;
	for (int i = 0; i < 256; i++) {
		M[char(i)] = A[i];
	}
	return 0;
}
